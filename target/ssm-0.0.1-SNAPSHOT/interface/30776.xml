<?xml version="1.0" encoding="gbk" ?>
<function id="30776" name="维持担保率监控" >
	<input>    
	<item type="select" id="insitution_id" name="营业部名称" source="95000008"/>
	<item type="hidden" id="cust_id" name="客户号"/>
	<item type="text" id="cust_code" name="客户代码" />
	<item type="text" id="gua_lower" name="担保率下限" default="0"/>
	<item type="text" id="gua_up" name="担保率上限" default="100"/>
  </input>
  <service type="procedure" id="p_risk_cust_gua_control" process="911" style="77">
	<param id="user_id"				 way="in"/> 
	<param id="insitution_id"			 way="in"/>
	<param id="cust_id"				 way="in"/>
	<param id="cust_code"				 way="in"/>
	<param id="gua_lower"				 way="in"/>
	<param id="gua_up"				 way="in"/>	
  </service>
  <output print="true">
	<column type="string" id="institution_name" name="营业部名称"/>
	<column type="string" id="institution_code" name="营业部代码"/>
	<column type="string" id="cust_code" name="客户代码"/>
	<column type="string" id="cust_name" name="客户姓名"/>	
	<column type="number" id="fin_debt" name="融资负债" precision="2"/>
	<column type="number" id="bs_debt" name="融券负债" precision="2"/>
	<column type="number" id="asset" name="总资产" precision="2"/>
	<column type="number" id="fund" name="资金余额" precision="2"/>	
	<column type="number" id="mortgage_value" name="场外担保品折算金额" precision="2"/>
	<column type="number" id="gua_rate" name="维持担保率(计入场外担保品)" precision="6"/>
	<column type="number" id="gua_rate_nomortgage" name="维持担保率(不计入场外担保品)" precision="6"/> 
	<column type="number" id="profit" name="融资融券盈亏" precision="2"/>						
	<column type="number" id="gua_amt" name="保证金可用余额" precision="2"/>
  </output> 
</function>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.huet.dao.UserMapper" >
  <resultMap id="BaseResultMap" type="com.huet.entity.User" >
    <id column="user_code" property="userCode" jdbcType="VARCHAR" />
    <result column="user_name" property="userName" jdbcType="VARCHAR" />
    <result column="user_status" property="userStatus" jdbcType="VARCHAR" /> 
  </resultMap>
  <sql id="Base_Column_List" >
    user_code, user_name,  user_status
  </sql>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.String" >
    select 
    <include refid="Base_Column_List" />
    from kssc..t_user
    where   user_code =  #{userCode,jdbcType=CHAR}  
  </select>
 
   <select id="getAllUser" resultMap="BaseResultMap">
        select user_code, user_name,  user_status from kssc..t_user
    </select>
</mapper>
<?xml version="1.0" encoding="gbk" ?>
<function id="31009" name="客户融资(券)保证金比例调整申请" >
	<input>
		<group name="客户基本情况" >
			<item type="hidden" id="cust_id" 						name="客户id" action="30110,37424"/><!--add 20140905-->
			<item type="hidden"	id="user_code"						name="操作员代码"/><!--add 20140905-->
			<item type="hidden"	id="user_institution_code"			name="操作员机构"/><!--add 20140905-->
			<item type="text"	id="cust_name" 						name="客户姓名" editable="false"/>
			<item type="hidden" id="institution_code" 				name="营业部代码"/>
			<item type="text"	id="institution_name" 				name="营业部"	editable="false"/>
			<item type="text"	id="cust_code" 						name="信用资金账号" editable="false"/>
			<item type="text"	id="commness_cust_code" name="普通资金账号" action="34026" editable="false"/> 
			<item type="text"	id="total_commness_asset" name="普通账户资产" editable="false"/> 
		</group>  
		<group name="信用级别情况" >
			<item type="hidden"	id="credit_level_id"         name="信用级别ID"  />
			<item type="text"	id="credit_level_name"         name="信用级别" editable="false"/> 
			<item type="text"	id="credit_level_guarantee_rate_13" name="初始保证金比例" editable="false"/>
			<item type="text"	id="credit_level_guarantee_rate_5" name="融券卖出保证金比例" editable="false"/>
			<item type="text"	id="credit_level_guarantee_rate_6" name="融资买入保证金比例" editable="false"/> 
		</group> 
		<group name="当前保证金比例情况" >
			<item type="text"	id="now_guarantee_rate_13" name="当前初始保证金比例" editable="false"/>
			<item type="text"	id="now_guarantee_rate_5" name="当前融券卖出保证金比例" editable="false"/>
			<item type="text"	id="now_guarantee_rate_6" name="当前融资买入保证金比例" editable="false"/> 
		</group> 
		<group name="申请保证金比例">
	    <item type="hidden"	id="applay_guarantee_rate_13" name="申请初始保证金比例" />
			<item type="text"	id="applay_guarantee_rate_5" name="申请融券卖出保证金比例" />
			<item type="text"	id="applay_guarantee_rate_6" name="申请融资买入保证金比例" />  
			<item type="textarea" id="remark" name="备注"/>
		</group> 
	</input>
	<service type="procedure" id="p_cust_rzrq_guarantee_rate_adjust" implement="p_cust_rzrq_guarantee_rate_adjust31009" process="811" style="1">
		<param type="integer" id="user_id"     way="in"/>
		<param type="integer" id="cust_id"   way="in"/>
		<param type="string" id="cust_code"  way="in"/>
		<param type="float" id="applay_guarantee_rate_6"  way="in"/>
		<param type="float" id="applay_guarantee_rate_5" way="in"/>
		<param type="float" id="applay_guarantee_rate_6" way="in"/>
		<param type="float" id="now_guarantee_rate_13" way="in"/>
		<param type="float" id="now_guarantee_rate_5"  way="in"/>
		<param type="float" id="now_guarantee_rate_6"  way="in"/>
		<param type="string" id="remark" way="in"/>
		<param type="number" id="total_commness_asset" way="in"/>
		
	</service>
	<output/>
</function>
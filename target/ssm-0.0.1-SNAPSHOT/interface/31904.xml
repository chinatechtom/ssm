<?xml version="1.0" encoding="gbk"?>
<function id="31904" name="信用交易汇总" >  
  <input export="true">
  <item type="select" id="institution_id" name="营业部名称" source="95000008"/>
	<item type="hidden" id="cust_id" 	name="客户号"  />
	<item type="text" 	id="cust_code" 	name="客户代码" />
	<item type="hidden" id="cust_name" 	name="客户姓名"/>
	<item type="text" id="cert_no" 	name="证件号码"/>
	<item type="select" id="if_crd_cust" name="是否信用客户" source="391" default="1"/>
	<item type="text" id="gua_rate_begin" 	name="担保率下限"/>
	<item type="text" id="gua_rate_end" 	name="担保率上限"/>
	<group name="分页查询" page="true">		
		<item type="text"   id="page_num"       name="页码"     integer="true" default="1"/>
		<item type="select" id="rows_num"       name="每页行数" integer="true" source="95000012" nullable="false"/>
	</group>
  </input>
  <service type="procedure" id="p_cust_credit_trade_query"  process="911" style="77">
	<param id="user_id" 		type="integer"/>
	<param id="page_num"        type="integer" />
	<param id="rows_num"        type="integer" />		
	<param id="institution_id" 	type="integer"/>
	<param id="cust_id" 		type="integer"/>
	<param id="cust_code"/>
	<param id="cust_name"/>
	<param id="cert_no"/>
	<param id="if_crd_cust"/>
	<param id="gua_rate_begin"  type="double" />
	<param id="gua_rate_end"    type="double" />
  </service>
  <output>
  	<column type="string" id="institution_name"   	name="营业部名称"/>
  	<column type="string" id="institution_code"   	name="营业部代码"/>
	<column type="number" id="cust_id"   			name="客户号" display="false"/>
    <column type="string" id="cust_code"   			name="客户代码"/>
    <column type="string" id="cust_name"   			name="客户姓名"/>
    <column type="string" id="credit_level_id"		name="信用ID" display="false"/>
	<column type="string" id="credit_level_name"	name="信用级别"/>
	<column type="number" id="fund_amt"   		name="总资产"   		precision="2" total="true"/>
	<column type="number" id="gua_amt"   		name="总担保品价值" 	precision="2" total="true"/>
	<column type="number" id="modify_gua_amt"	name="总担保品修正价值" precision="2" total="true"/>
	<column type="number" id="debt_amt"   		name="总负债" 			precision="2" total="true"/>
	<column type="number" id="convert_value"    name="资产折算价值"	precision="2" total="true"/>
	<column type="number" id="credit_limit"  	name="授信额度"	        precision="2" total="true"/>
  <column type="number" id="assure_rate"  	name="维持担保比例"	precision="6"/>
  <column type="number" id="gua_rate_nomortgage"  	name="不计入场外担保品维持担保比例"	precision="6"/>
  <column type="number" id="mortgage_value"  	name="场外担保品价值"	precision="4"/> 
  </output>
</function>
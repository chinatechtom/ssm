<?xml version="1.0" encoding="gbk" ?>
<function id="30205" name="客户融资查询" >
	<input export="true">	
		<item type="select"  id="select_method_id"	    name="查询方式" source="515" nullable="false"/>			
		<item type="select"  id="institution_id"	    name="营业部名称" source="95000008"/>
		<item type="hidden"  id="cust_id"	            name="客户id"/>		
		<item type="text"    id="cust_code"	            name="客户代码"/>
		<item type="hidden"  id="acc_id"	            name="账户id"/>
		<item type="hidden"   id="acc_code"	            name="资金账户"/>			
        <group name="分页查询" page="true">			
			<item type="text"    id="page_num"       name="页码"     integer="true" default="1"/>
			<item type="select"  id="rows_num"       name="每页行数" integer="true" source="95000012" nullable="false"/>
		</group>
	</input>
    <service type="procedure" id="p_cust_query_financing"  implement="p_cust_query_financing30205"  process="911" style="77">
		<param id="user_id"	            type="integer" way="in"/> 
		<param id="page_num"	        type="integer"  way="in"/> 			
		<param id="rows_num"	        type="integer"  way="in"/> 		
		<param id="select_method_id"	    type="integer" way="in"/> 	
		<param id="institution_id"	    type="integer" way="in"/> 
		<param id="cust_id"	            type="integer" way="in"/> 
		<param id="cust_code"	        type="string"  way="in"/> 
		<param id="acc_id"				type="integer" way="in"/> 
		<param id="acc_code"	        type="string"  way="in"/>				
    </service>
    <output export="true">
    <column type="string" id="institution_code"		name="营业部代码"/>	    	
    <column type="string" id="institution_name"				name="营业部名称"/>	
		<column type="string" id="cust_code"				name="客户代码"/>
		<column type="string" id="cust_name"				name="客户姓名"/>
		<column type="number" id="acc_id"					name="账户id"	display="false"/>
		<column type="string" id="acc_code"					name="资金账户" display="false"/>
		<column type="string" id="date"						name="日期"		display="false"/>
		<column type="string" id="property_type"			name="资产种类" display="false"/>
		<column type="string" id="currency_type"			name="货币类型"/>
		<column type="number" id="fix_qty"					name="融资上限"		precision="2" total="true"/>
		<column type="number" id="surplas_fix_qty"			name="剩余融资上限额度"		precision="2" display="false"/>
		<column type="number" id="qc_fund_amt"			    name="期初资金负债"		precision="2" total="true"/>
		<column type="number" id="real_fund_amt"			      name="实时资金负债"		precision="2" total="true"/>		
		<column type="number" id="yesterday_fin_amt"        name="期初融资余额"		precision="2" total="true"/>
		<column type="number" id="real_fin_amt"			    name="实时融资余额"		precision="2" total="true"/>
		<column type="number" id="deposit"					name="当日融资调入"	precision="2" total="true"/>
		<column type="number" id="withdraw"					name="当日融资调出"	precision="2" total="true"/>
		<column type="number" id="frozen_amt"				name="冻结资金"		precision="2" total="true" display="false"/>
		<column type="number" id="abnormal_frozen_amt"		name="异常冻结资金"	precision="2" total="true" display="false"/>
		<column type="number" id="real_buy_amt"				name="买入成交金额"	precision="2" total="true"/>
		<column type="number" id="buy_frozen_amt"			name="买入冻结金额"	precision="2" total="true" display="false"/>
		<column type="number" id="sell_done_amt"			name="卖出冲抵融资"	precision="2" total="true"/>
		<column type="number" id="manual_frzn_amt"			name="手工冻结金额"	precision="2" total="true" display="false"/>
		<column type="number" id="manual_unfrzn_amt"		name="手工解冻金额"	precision="2" total="true" display="false"/>
		<column type="number" id="credit"					name="信用额"		display="false"/>
		<column type="number" id="forbid_amt"				name="禁用资金"		precision="2" total="true" display="false"/>
		<column type="number" id="forbid_asset"				name="禁取资产"		precision="2" total="true" display="false"/>
		<column type="number" id="interest"					name="利息"			precision="2" display="false"/>
		<column type="number" id="interest_count"			name="利息积数"		precision="2" total="true" display="false"/>
		<column type="number" id="punish_interest"			name="罚息"			precision="2" total="true" display="false"/>
		<column type="number" id="punish_interest_count"	name="罚息积数"		precision="2" total="true" display="false"/>		
		<column type="number" id="credit_fee"				name="已结未付费用"		precision="2" total="true"/>
		<column type="number" id="credit_interest"			name="已结未付利息"		precision="2" total="true"/>
		<column type="number" id="credit_exchange_fee"		name="已结未付交易费用"	precision="2" total="true"/>
		<column type="number" id="credit_hl"	            name="未付融券红利"		precision="2" total="true"/>
    </output>
</function>

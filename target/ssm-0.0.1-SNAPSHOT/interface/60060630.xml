		<column type="number"	id="second_amt"				name="原购回金额" precision="2"	/>
		<column type="number"	id="second_amt2"			name="更新后购回金额"	precision="2" />
		<column type="number"	id="prewarning_price"	  name="预警履约保障比率"	precision="3"/>
		<column type="number"   id="lowest_price"     name="最低履约保障比率" precision="3"/>
		<column type="number" id="guarantee_rate2" name="合并履约保障比率比率(%)" precision="2"/>
	</output>
</function>
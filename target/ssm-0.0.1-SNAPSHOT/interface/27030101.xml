<?xml version="1.0" encoding="gbk" ?>
<function id="27030101" name="2-1营业部融资融券负债规模" >
  <input>
    <item type="select" id="insitution_id" name="营业部名称" source="95000008"/>
	<item type="date"   id="trade_date"    name="交易日期" default="last" nullable="false"/> 	
  </input>
  <service type="procedure" id="P27030101"  implement="P2703010127030101" process="955" style="77">
    <param id="user_id"               type="integer" way="in"/>
    <param id="insitution_id"         type="integer" way="in"/>
    <param id="trade_date"            type="string" way="in"/>	
  </service>
 <output print="true">
	<column type="number" id="id"   name="序号"/>	
	<column type="string" id="institution_code"   name="营业部代码"/>        
	<column type="string" id="institution_name"   name="营业部名称" />
	<group name="纯融资规模">
	  <column type="number" id="pure_fin_amt"     name="1 纯融资客户融资金额"    precision="2"/>   
      <column type="number" id="pure_fin_num"     name="2 纯融资客户数"          precision="0"/>  
	</group>
	<group name="纯融券规模">
	  <column type="number" id="pure_bs_amt"     name="3 纯融券客户融券金额"    precision="2"/>   
      <column type="number" id="pure_bs_num"     name="4 纯融券客户数"          precision="0"/>  
	</group>
	<group name="融资融券规模">
	  <group name="5 融资融券客户金额">
	    <column type="number" id="fin_amt"     name="5.1 融资金额"      precision="2"/>   
        <column type="number" id="bs_amt"      name="5.2 融券金额"      precision="2"/>   
	  </group>
	  <column type="number" id="fin_bs_num"  name="6 融资融券客户数"    precision="0"/>  
	</group>
    <column type="number" id="fin_amt_all"   name="7 融资总金额"  precision="2"/>   
    <column type="number" id="fin_rate"      name="占比"          precision="6"/>   
    <column type="number" id="bs_amt_all"    name="8 融券总金额"  precision="2"/>   
    <column type="number" id="bs_rate"       name="占比"        precision="6"/> 
    <column type="number" id="cust_num_all"  name="9 客户总数"  precision="2"/>   
    <column type="number" id="cust_num_rate" name="占比"        precision="6"/>   
</output>
</function>  
<?xml version="1.0" encoding="gbk" ?>
<function id="27010131" name="风险客户比例统计">
	<input>
		<item type="hidden"  id="cust_id"	            name="客户id" />
		<item type="select"	 id="insitution_id"			name="营业部名称" source="95000008"/>
		<item type="date"    id="begin_date"	        name="日期"		   default="now"/>	
		
	</input>
    <service type="procedure" id="P27010131"  implement="P2701013127010131" process="955" style="77">
		<param id="user_id"	        type="integer" way="in"/>
		<param id="insitution_id"	type="integer" way="in"/>
		<param id="begin_date"		type="string"  way="in"/>
    </service>
    <output export="true" autoload="false" print="true">
		<column type="string" id="institution_id"				name="营业部id"		display = "false"/>
		<column type="string" id="institution_code"				name="营业部分支号"/>
		<column type="string" id="institution_name"				name="营业部"/>
		<column type="number" id="num_cust"						name="营业部信用客户总数"	total="true"	 />
		<column type="number" id="credit_cust_company_percent"	name="占公司信用客户总数的比例%" precision="4"/>
		<group name="150%≤维持担保比例">
			<column type="number" id="num_cust_gt_150"			name="户数"		total="true"/>
			<column type="number" id="asset_gt_150"				name="资产"		precision="2" total="true"/>
			<column type="number" id="debt_gt_150"				name="负债"		precision="2" total="true"/>
			<column type="number" id="gt_150_percent"			name="户数营业部占比%" precision="4"/>
		</group>
		<group name="维持担保比例[130%,150%)">
			<column type="number" id="num_cust_130_150"			name="户数"		total="true"/>
			<column type="number" id="asset_130_150"			name="资产"			precision="2" total="true"/>
			<column type="number" id="debt_130_150"				name="负债"			precision="2" total="true"/>
			<column type="number" id="b_130_150_percent"		name="户数营业部占比%" precision="4"/>
		</group>
		<group name="维持担保比例小于130%">
			<column type="number" id="num_cust_lt_130"			name="户数"		total="true"/>
			<column type="number" id="asset_lt_130"				name="资产"		precision="2" total="true"/>
			<column type="number" id="debt_lt_130"				name="负债"		precision="2" total="true"/>
			<column type="number" id="lt_130_percent"			name="户数营业部占比%" precision="4"/>
		</group>
		<group name="维持担保比例小于100%">
			<column type="number" id="num_cust_lt_100"			name="户数"		total="true"/>
			<column type="number" id="asset_lt_100"				name="资产"		precision="2" total="true"/>
			<column type="number" id="debt_lt_100"				name="负债"		precision="2" total="true"/>
			<column type="number" id="lt_100_percent"			name="户数营业部占比%" precision="4"/>
		</group>
		<group name="逾期">
			<column type="number" id="cust_num_over_date"		name="户数"		total="true"/>
			<column type="number" id="asset_over_date"			name="资产"		precision="2" total="true"/>
			<column type="number" id="debt_over_date"			name="负债"		precision="2" total="true"/>
			<column type="number" id="over_date_percent"		name="户数营业部占比%" precision="4"/>
		</group>
    </output>
</function>

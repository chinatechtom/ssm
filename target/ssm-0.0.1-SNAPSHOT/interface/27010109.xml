<?xml version="1.0" encoding="gbk" ?>
<function id="27010109" name="融资融券平仓证券流动性统计">
	<input>
		<item type="hidden"  id="cust_id"	            name="客户id" />
		<item type="text"    id="product_code"          name="证券代码" />
		<item type="text"    id="product_name"          name="证券名称" />
		<item type="text"    id="day_num"	        	name="到期N日内" default="5"/>		
	</input>
    <service type="procedure" id="P27010109"  process="911" style="77">
		<param id="user_id"	        type="integer" way="in"/> 
		<param id="product_code"    type="string"  way="in"/>
		<param id="product_name"    type="string"  way="in"/>
		<param id="day_num"			type="integer" way="in"/>
    </service>
    <output export="true" autoload="false" print="true">
		<column type="string" id="product_id"		name="证券id"		display = "false"/>
		<column type="string" id="product_code"		name="1证券代码"/>
		<column type="string" id="product_name"		name="2证券名称"/>
		<column type="number" id="asset_value"		name="3该证券总市值"				precision="2"/>
		<column type="number" id="circulated_value"	name="4该证券流通市值"			precision="2"/>
		<column type="number" id="avg_trade_qty"		name="5该证券近N日均成交量"		precision="2"/>
		<group name="融资平仓证券流动性">
			<column type="number" id="financing"						name="6n日内须平仓金额"	precision="2" />
			<column type="number" id="financing_asset_percent"			name="6/3比例%" precision="4"/>
			<column type="number" id="financing_circulated_percent"		name="6/4比例%" precision="4"/>
			<column type="number" id="financing_avg_trade_percent"		name="6/5比例%" precision="4"/>
		</group>
		<group name="融券平仓证券流动性">			
			<column type="number" id="bs_market_value"					name="7n日内须平仓市值" precision="2"/>
			<column type="number" id="bs_asset_percent"					name="7/3比例%" precision="4"/>
			<column type="number" id="bs_circulated_percent"			name="7/4比例%" precision="4"/>
			<column type="number" id="bs_avg_trade_percent"				name="7/5比例%" precision="4"/>	
		</group>
    </output>
</function>

<?xml version="1.0" encoding="gbk" ?>
<function id="30731" name="客户应买证券查询" >
	<input>
		<item type="hidden"  id="cust_id"	            name="客户id"/>		
		<item type="text"    id="cust_code"	            name="客户代码"/>
		<item type="text"    id="cust_name"	            name="客户姓名"/>
		<item type="hidden"  id="product_id"	        name="产品id"/>
		<item type="text"    id="pc_reason"	            name="平仓原因"/>
	</input>
    <service type="procedure" id="p_cust_should_buy_stock_query"  process="911" style="77">
		<param id="user_id"	            type="integer" way="in"/> 
		<param id="cust_id"	            type="integer" way="in"/> 
		<param id="cust_code"	        type="string"  way="in"/>
		<param id="cust_name"	        type="string"  way="in"/> 	
		<param id="product_id"	        type="integer" way="in"/> 
		<param id="pc_reason"	        type="string"  way="in"/>
    </service>
    <output export="true">
		<column type="string"  id="market_code_name"		name="市场"/>    	
		<column type="number"  id="cust_id"					name="客户id"	display="false"/>
		<column type="string"  id="cust_code"				name="客户代码"	display="false"/>
		<column type="string"  id="cust_name"				name="客户姓名"	display="false"/>
		<column type="number"  id="acc_id"					name="账户id"	display="false"/>        
		<column type="string"  id="acc_code"				name="账户代码"/>        
		<column type="number"  id="product_id"				name="证券id"	display="false"/>                    
		<column type="string"  id="product_code"			name="证券代码"/>                     
		<column type="string"  id="product_name"			name="证券名称"/>
		<column type="string"  id="market_code"				name="市场1"		display="false"/>
		<column type="number"  id="asset_qty"				name="证券数量"/> 
		<column type="number"  id="asset_value"				name="证券总价值"	precision="2" total="true"/>
		<column type="number"  id="buy_qty"					name="买入数量"/> 
		<column type="number"  id="buy_value"				name="买入总价值"	precision="2" total="true"/>
		<column type="number"  id="buy_price"				name="买入价格"		precision="3"/>
		<column type="number"  id="stock_convert_rate"		name="折算率"		precision="4"/>
    </output>
</function>

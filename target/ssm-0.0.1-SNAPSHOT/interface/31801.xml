<?xml version="1.0" encoding="gbk" ?>
<function id="31801" name="融资明细查询" >	
  <input>	
	<item type="select" id="institution_id" name="营业部名称"  source="95000008"/>
	<item type="hidden" id="cust_id" name="客户id"/>
	<item type="text"   id="in_cust_code"    name="客户代码" />
	<item type="text"   id="in_product_code" name="证券代码" />
	<item type="date"   id="date" name="日期" />	
  </input>  
  <service type="procedure" id="p_report_financing_query" process="911" style="77"> 
  <param id="user_id" type="integer" />
	<param id="cust_id" type="integer"/>
	<param id="institution_id" type="integer"/>
	<param id="in_cust_code"     type="string"	way="in"/>
	<param id="in_product_code"  type="string"  way="in"/>	
	<param id="date"  type="string"  way="in"/>
  </service>  
  <output export="true">  	
  <column type="string"  id="institution_id"             name="机构ID" display="false"/>
  <column type="string"  id="institution_name"           name="机构名称"/>
	<column type="string"  id="cust_code"                  name="客户代码"/>
	<column type="string"  id="cust_name"                  name="客户姓名"/>
	<column type="string"  id="product_code"               name="证券代码"/>    
	<column type="number"  id="yes_financing_amt"          name="前日融资余额"		precision="2"/>
	<column type="number"  id="today_financing_amt"        name="本日融资余额"		precision="2"/>
	<column type="number"  id="today_buy_amt"              name="本日融资买入额"		precision="2"/>
	<column type="number"  id="today_retutn_amt"           name="本日融资偿还额"		precision="2"/>	
	<column type="number"  id="today_direct_return_amt"    name="本日融资直接还款额"	precision="2"/>	
	<column type="number"  id="today_sell_return_amt"      name="本日融资卖券还款额"	precision="2"/>
	<column type="number"  id="today_pc_amt"               name="本日融资强制平仓额"	precision="2"/>
	<column type="string"  id="date"                       name="交易日期"/>
  </output>
</function>
<?xml version="1.0" encoding="gbk" ?>
<function id="70010872" name="新增特殊委托" >
  <input>
	<item type="hidden" id="sbond_id" name="交易协议书id" />
	<group name="账户信息" >
		<item type="text" 	id ="institution_code" 	name="营业部代码" 		editable="false"/>
		<item type="text" 	id ="institution_name" 	name="营业部名称" 		editable="false"/>
		<item type="hidden" id ="cust_id" 		name="客户id" 			action="70001888"/>			
		<item type="text" 	id ="cust_name" 	name="客户姓名" 		editable="false"/>
		<item type="text" 	id ="cust_code" 	name="客户代码" 		editable="false"/>
		<item type="text" 	id ="cust_type_name" 	name="客户类型" 		editable="false"/>
		<item type="text" 	id ="acc_code" 		name="客户证券账户" 	editable="false"/>
		<item type="text" 	id ="seat_code" 		name="客户交易席位" 	editable="false"/>
	</group>  
	<group name="交易协议书基本信息" >
		<item type="text" 	id ="sbond_no" 		name="交易协议书编号" 	editable="false"/>、
		<item type="select" id ="market_code" 	name="市场代码" 		editable="false" source="039"/>
		<item type="text" 	id ="product_code" 	name="标的证券代码" 	editable="false"/>
		<item type="text" 	id ="product_name" 	name="标的证券名称" 	editable="false"/>
		<item type="text" 	id ="product_type" 	name="标的证券类型" 	editable="false"/>
		<item type="hidden" id ="related_sbond_id"	name="related_sbond_id"/>
		<item type="text" 	id ="related_sbond_no" 	name="关联(主)交易协议书编号"	editable="false"/>		
	</group> 
	<group name="交易协议书详细信息">
		<item type="text" 	id ="hg_num" 			name="标的证券数量" 	editable="false"/>
		<item type="text" 	id ="hg_convert_rate" 	name="折扣比率(%)" 		editable="false"/>
		<item type="hidden" id ="app_price" 		name="标的证券价格" 	editable="false"/>
		<item type="date" 	id ="engage_trade_date"	name="初始交易日期" 	editable="false"/>
		<item type="text" 	id ="days2" 			name="购回期限(天)" 	editable="false"/>
		<item type="date" 	id ="bb_date2"			name="购回交易日期" 	editable="false"/>
		<item type="text" 	id ="hg_rate" 			name="购回价格(每100元年收益)"	editable="false"/>
		<item type="text" 	id ="first_amt" 		name="初始交易金额" 	editable="false"/>
		<item type="text" 	id ="second_amt2" 		name="购回交易金额" 	editable="false"/>
	</group>
	<group name="特殊委托信息录入">
		<item type="select" id ="spec_type" name="特殊委类型"	source="733" default='1' nullable="false" />
		<item type="text" 	id ="spec_num"  name="委托证券数量" integer="true" default="0" nullable="false" />
		<item type="text" 	id ="spec_amt" 	name="委托金额" 	number="true" default="0" precision="2" nullable="false" />
	</group>	
	<item type="hidden" id="date"     	name="打印日期"/><!--从1888.xml获得的打印日期-->
	<item type="hidden" id="user_code"	name="打印柜员代码"/><!--从1888.xml获得的打印柜员代码-->
	<item type="hidden" id="user_name"	name="打印柜员名称"/><!--从1888.xml获得的打印柜员名称-->
	<item type="hidden" id="company"    name="券商名称"/><!--从1888.xml获得的券商名称-->		
  </input>
  <service type="procedure" id="P70010872" process="822" style="1">
	<param type="integer" 	id="user_id"/>
	<param type="integer" 	id="cust_id"/>
	<param type="integer" 	id="sbond_id"/>
	<param type="string"	id="market_code"/>
	<param type="string"	id="spec_type"/>
	<param type="float"	    id="spec_amt"/>
	<param type="float"		id="spec_num"/>
  </service>
  <output/>
</function>
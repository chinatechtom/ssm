<?xml version="1.0" encoding="gbk" ?>
<function id="3221802" name="特定条件客户群发邮件">
	<input>
		<item type="hidden"		id="cust_code"		name="客户代码"		default="ALL"	/>
		<item type="text"		id="recipients"		name="收件人"		default="所有客户"	editable="false"	/>
		<item type="text"		id="subject"		name="主题"	/>
		<item type="select"		id="send_type"		name="发送方式" 	source="504"	nullable="false"	/>
		<item type="bigtextarea"	id="content"	name="内容" />
		<item type="hidden"		id="recipient_type"	name="收件人类型"	default="1" />	
	</input>
	<service type="procedure"	id="p_manual_email_generate" process="811" style="1">
		<param id="user_id"			type="integer"	/>				
		<param id="cust_code"		type="string"	/>
		<param id="user_code"		type="string"	/>
		<param id="group_code"		type="string"	/>
		<param id="recipient_type"	type="string"	/>		
		<param id="send_type"		type="string"	/>
		<param id="subject"			type="string"	/>
		<param id="content"			type="string"	/>
	</service>
	<output/>
</function>
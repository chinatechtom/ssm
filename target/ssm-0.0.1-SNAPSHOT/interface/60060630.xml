<?xml version="1.0" encoding="gbk" ?>
<function id="60060630" name="特定条件客户查询">
	<input>
		<item type="hidden"	id="cust_id"			name="客户ID"	action="70001888"	/>
		<item type="select"	id="institution_id"		name="营业部"	source="97000001"	/>
		<item type="text" 	id="cust_code"			name="客户代码"		/>
		<item type="text" 	id="sbond_no"			name="交易协议书编号"		/>

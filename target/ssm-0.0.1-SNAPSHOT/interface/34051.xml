<?xml version="1.0" encoding="gbk" ?>
<function id="34051" name="一段时间历史利息费用融资融券余额查询" >
	<input export="true">	  
		<item type="text"    id="cust_code" name="客户代码" nullable="false"/> 
		<item type="select"  id="order_type" name="利费类型" source="394"/>
		<item type="date"    id="begin_date" name="起始日期" default="last"/> 	
		<item type="date"    id="end_date" name="终止日期" default="now"/> 	
	</input>
  <service type="procedure" id="p_cust_query_period_credit_charge_his" process="955" style="77">
		<param id="user_id"        type="integer" way="in"/>     
		<param id="cust_code"      type="string"  way="in"/>
		<param id="order_type"     type="string"  way="in"/>
		<param id="begin_date"     type="string"  way="in"/>		
		<param id="end_date"       type="string"  way="in"/> 		
  </service>
  <output export="true">
		<column type="string" id="cust_code"					      name="客户代码"/>
		<column type="string" id="cust_name"					      name="客户姓名"/>
		<column type="string" id="order_type"			          name="合约类型"/>
		<column type="string" id="serial_no"			          name="流水号"/>
		<column type="string" id="date"                     name="当前日期"/>		
		<column type="string" id="occur_date"               name="发生日期"/>		
		<column type="string" id="interest_date"            name="计息日期"/>		
		<column type="number" id="days"                     name="计息天数"/>		
		<column type="number" id="fund_amt"	                name="资金负债"	      precision="4" />		
		<column type="number" id="fin_amt"	                name="融资金额"	      precision="4" />		
		<column type="number" id="real_bs_vol"	            name="融券数量 "	    precision="4" />		
		<column type="number" id="asset_qty"	              name="持仓余额"	      precision="4" />		
		<column type="number" id="interest"	                name="当日利息"	      precision="4" total="true"/>		
		<column type="number" id="fix_borrow"	              name="当日固定额度费"	precision="4" />
		<column type="number" id="takeup_borrow"            name="当日占用额度费"	precision="4" />
		<column type="number" id="bef_rtn_commission"       name="当日提前还贷手续费"	precision="4" />
		<column type="number" id="punish"	                  name="当日逾期罚息"	  precision="4" />
		<column type="number" id="bad_punish"	              name="当日坏帐罚息"	  precision="4" />
		<column type="number" id="interest_sum"	            name="未结利息"	      precision="4" total="true"/>		
		<column type="number" id="fix_borrow_sum"	          name="未结固定额度费"	precision="4" />
		<column type="number" id="takeup_borrow_sum"        name="未结占用额度费"	precision="4" />
		<column type="number" id="bef_rtn_commission_sum"   name="未结提前还贷手续费"	precision="4" />
		<column type="number" id="punish_sum"	              name="未结逾期罚息"	  precision="4" />
		<column type="number" id="bad_punish_sum"	          name="未结坏帐罚息"	  precision="4" />
  </output>
</function>

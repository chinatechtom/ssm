<?xml version="1.0" encoding="gbk" ?>
<function id="27010105" name="融资集中度查询">
	<input>
		<item type="hidden"  id="cust_id"	            name="客户id" />
		<item type="text"    id="product_code"          name="证券代码" />
		<item type="text"    id="product_name"          name="证券名称" />
		<item type="date"    id="begin_date"	        name="日期" default="now"/>		
	</input>
    <service type="procedure" id="P27010105"  process="911" style="77">
		<param id="user_id"	        type="integer" way="in"/> 
		<param id="product_code"    type="string"  way="in"/>
		<param id="product_name"    type="string"  way="in"/>
		<param id="begin_date"		type="string"  way="in"/>
    </service>
    <output export="true" autoload="false" print="true">
		<column type="string" id="product_id"		name="证券id"		display = "false"/>
		<column type="string" id="product_code"		name="1证券代码"/>
		<column type="string" id="product_name"		name="2证券名称"/>
		<column type="number" id="asset_value"		name="3该证券总市值"				precision="2"/>
		<column type="number" id="circulated_value"	name="4该证券流通市值"			precision="2"/>
		<column type="number" id="trade_amt"		name="5该证券当日成交金额"		precision="2"/>
		<group name="公司融资">
			<column type="number" id="rzye"								name="6该证券公司融资额"			precision="2" />
			<column type="number" id="total_occur_bal"					name="7该证券公司当日融资买入金额" precision="2"/>
			<column type="number" id="company_total_financing"			name="8公司融资总额" precision="2"/>
			<column type="number" id="company_buy_amt"					name="9该证券公司当日融资买入总金额" precision="2"/>
			<column type="number" id="rzye_company_financing_percent"	name="6/8的比例%" precision="4"/>
			<column type="number" id="rzye_asset_percent"				name="6/3比例%" precision="4"/>
			<column type="number" id="rzye_circulated_percent"			name="6/4比例%" precision="4"/>
			<column type="number" id="occur_company_buy_percent"		name="7/9比例%" precision="4"/>
		</group>
		<group name="市场融资证券集中度">
			<column type="number" id="occur_trade_percent"				name="7/5比例%" precision="4"/>
		</group>
    </output>
</function>

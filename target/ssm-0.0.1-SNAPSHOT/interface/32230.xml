<?xml version="1.0" encoding="gbk" ?>
<function id="32230" name="公司用户群发邮件">
	<input>		
		<group name="收件人">
			<item type="checkbox"	id="recipient_group"	name="收件人组"		source="95000009"	/>
		</group>
		<group name="邮件信息">
			<item type="text"		id="subject"			name="主题"								/>
			<item type="select"		id="send_type"			name="发送方式"		source="331"		nullable="false"	/>
			<item type="textarea"	id="content"			name="内容"		/>
			<item type="hidden"		id="recipient_type"		name="收件人类型"	default="2" />	<!--用户-->
		</group>
	</input>
	<service type="procedure"	id="p_manual_email_generate" process="811" style="1">
		<param id="user_id"			type="integer"	/>	
		<param id="cust_code"		type="string"	/>
		<param id="user_code"		type="string"	/>
		<param id="recipient_group"	type="string"	/>
		<param id="recipient_type"	type="string"	/>
		<param id="send_type"		type="string"	/>
		<param id="subject"			type="string"	/>
		<param id="content"			type="string"	/>
	</service>
	<output/>
</function>
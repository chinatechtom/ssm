<?xml version="1.0" encoding="gbk" ?>
<function id="27010117" name="客户强制平仓情况日报表">
	<input>
		<item type="select"		id="insitution_id"	name="营业部"	source="95000008"/>
<!--
		<item type="hidden"		id="id"				name="id"		action="31381" default="1"/>		
		<item type="date"		id="date"			name="日期"		editable="false"/>
-->
	</input>
    <service type="procedure" id="P27010117"  process="911" style="77">
		<param id="user_id"	        type="integer" way="in"/>
		<param id="insitution_id"	type="integer" way="in"/>
    </service>
    <output export="true" autoload="false" print="true">
		<column type="string" id="row_no"						name="序号" />
		<column type="string" id="institution_code"				name="营业部分支号"/>
		<column type="string" id="institution_name"				name="营业部"/>
		<column type="string" id="cust_code"					name="客户号"/>
		<column type="string" id="cust_name"					name="客户名"/>
		<group name="融资平仓情况">
			<column type="string" id="rzcd"						name="融资仓单编号"/>
			<column type="number" id="rz_before_pc"				name="期初应平融资负债金额"	precision="2"	/>
			<group name="偿还情况">
				<column type="number" id="mqhk"						name="卖券还款金额"		precision="2"	/>
				<column type="number" id="zjhk"						name="直接还款金额"		precision="2"	/>
				<column type="number" id="pchk"						name="当日融资平仓金额"	precision="2"	/>
				<column type="number" id="rzpc_total"				name="偿还合计"				precision="2"	/>
			</group>
			<group name="账户资产">
				<column type="number" id="fund_value"				name="现金"					precision="2"	/>
				<column type="number" id="stock_value" 				name="证券市值"				precision="2"	/>
			</group>			
			<column type="number" id="rz_after_pc" 				name="期末应平未平融资负债余额"	precision="2"	/>
			<column type="number" id="rz_risk" 					name="风险敞口"				precision="2"	/>
		</group>
		<group name="融券平仓情况">
			<column type="string" id="rqcd"						name="融券仓单编号"/>
			<column type="number" id="rq_before_pc"				name="期初应平融券负债金额"	precision="2"	/>
			<group name="偿还情况">
				<column type="number" id="rqpc_total"				name="偿还合计"				precision="2"	/>
			</group>
			<group name="账户资产">
				<column type="number" id="fund_value1"				name="现金"					precision="2"	/>
				<column type="number" id="stock_value1" 				name="证券市值"				precision="2"	/>
			</group>			
			<column type="number" id="rq_after_pc" 				name="期末应平未平融券负债金额"	precision="2"	/>
			<column type="number" id="rq_risk" 					name="风险敞口"				precision="2"	/>
		</group>
		<column type="number" id="total_before_pc" 				name="期初应平仓总额"				precision="2"	/>
		<column type="number" id="total_pc" 					name="今日平仓总额"				precision="2"	/>
		<column type="number" id="total_after_pc" 				name="期末应平未平仓总额"			precision="2"	/>
	</output>
</function>

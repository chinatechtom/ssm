<?xml version="1.0" encoding="gbk" ?>
<function id="32303" name="客户账户盈亏查询" >
  <input>	
	<item type="select" id="institution_id" name="营业部名称" source="95000008"/>
	<item type="text"   id="cust_code" 		name="客户代码" /> 
	<item type="date"   id="sdate" 		    name="起始日期"  default="last"/>
	<item type="date"   id="edate" 		    name="结束日期"  default="now"/>
  </input>
  <service type="procedure" id="p_cust_account_profit" process="911" style="77">
	<param id="user_id" 		type="integer"/>
   	<param id="institution_id" 	type="string"/>
   	<param id="cust_code" 		type="string"/>
   	<param id="sdate" 	        type="string"/>
   	<param id="edate" 			type="string"/>
  </service>
  <output >
    <column type="string" id="institution_code"      name="营业部代码"  />
    <column type="string" id="institution_name"      name="营业部名称"  /> 
    <column type="string" id="cust_code"             name="客户代码"    />
    <column type="string" id="cust_name"             name="客户名称"    />   	
    <column type="number" id="this_month_end_asset"  name="期末总资产"  precision="2" total="true"/>
    <column type="number" id="this_month_end_debt"   name="期末总负债"  precision="2" total="true"/>
    <column type="number" id="last_month_end_asset"  name="期初总资产"  precision="2" total="true"/>
	<column type="number" id="last_month_end_debt"   name="期初总负债"  precision="2" total="true"/>
	<column type="number" id="fund_chg_in"           name="资金变动入"  precision="2" total="true"/>
    <column type="number" id="fund_chg_out"          name="资金变动出"  precision="2" total="true"/>
    <column type="number" id="stock_chg_in"          name="证券市值入"  precision="2" total="true"/>
	<column type="number" id="stock_chg_out"         name="证券市值出"  precision="2" total="true"/>
	<column type="number" id="cust_all_profit"       name="总盈亏"      precision="2"  total="true"/>
  </output>
</function>
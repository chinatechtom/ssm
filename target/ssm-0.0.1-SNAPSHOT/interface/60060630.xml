		<param id="cust_id"			type="integer" />
		<param id="institution_id"	type="integer"	/>
		<param id="cust_code"		type="string"	/>
		<param id="sbond_no"		type="string"	/>
		<param id="sbond_status"		type="string"	/>
		<param id="bb_date"		type="string"	/>
		<param type="float"  id="guarantee_rate"/>	
		<param type="integer" id="reach_days"/>
	</service>
	<output>
		<column type="number" 	id="cust_id"				name="用户ID"	 display="false"	/>
		<column type="string" 	id="cust_code"				name="客户代码"	  />
		<column type="string" 	id="cust_name"				name="客户名称"		 />
		<column type="number" 	id="institution_id"			name="营业部ID"				display="false"	/>
		<column type="string" 	id="institution_name"		name="营业部名称"	 />
		<column type="number" 	id="sbond_id"				name="交易协议书ID"	display="false"	/>
		<column type="string" 	id="sbond_no"				name="交易协议书编号"	/>
		<column type="string" 	id="sbond_status"			name="交易协议书状态id" display="false"/>
		<column type="string" 	id="sbond_status_name"		name="交易协议书状态"/>
		<column type="string" 	id="product_code"			name="标的证券代码"	/>

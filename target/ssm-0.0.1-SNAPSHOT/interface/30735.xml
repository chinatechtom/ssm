			<item type="text"	id="margin_used"		name="已使用保证金"	editable="false"/>
			<item type="text"	id="margin_remain"		name="剩余保证金"	editable="false"/>
			<item type="text"	id="margin_total"		name="总保证金"	editable="false"/>
			<item type="grid"	id="financing_asset"	name="融资明细"	source="33200"/>
			<item type="grid"	id="bstock_asset"	name="融券明细"	source="33203"/>
		</group>
		<group name="平仓方案" scope = "group">
			<item type="hidden"	id="record_id"	name="记录id"/>
			<item type="hidden"	id="cust_id"	name="客户id"/>
			<item type="select"	id="pc_mode"	name="平仓顺序"	source="121" editable="false"/> 
			<item type="select"	id="pc_reason"	name="平仓原因"	source="322" editable="false"/> 
			<item type="grid"	id="sell_stock"	name="应平证券"	source="30753"/> 
			<item type="grid"	id="buy_stock"	name="应买证券"	source="30754"/> 
		</group>
		<group name="审批结果">
			<item type="hidden" id="record_id" name="平仓记录id"/>
			<item type="textarea" id="approver_opinion" name="审批意见" editable="false"/>
			<item type="date" id="bc_begin_date" name="补仓起始日期" editable="false"/>
			<item type="date" id="bc_end_date" name="补仓截至日期"/>
			<item type="date" id="today" name="今天日期"	editable="false"/>
		</group>		
  </input>
  <service type="procedure" id="p_pc_record_bc_set" process="811" style="1">
		<param id="user_id" type="integer" way="in"/>
		<param id="record_id"	type="integer"  way="in"/>
		<param id="approver_opinion" type="string" way="in"/>
		<param id="bc_begin_date" type="string" way="in"/>
		<param id="bc_end_date" type="string" way="in"/>		
  </service>
  <output/>
</function>
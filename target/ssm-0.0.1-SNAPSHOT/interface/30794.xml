<?xml version="1.0" encoding="gbk" ?>
<function id="30794" name="公司信息隔离监控" >
	<input>
		<item type="select"  id="market_code"	name="市场"	   source="039"/>
		<item type="text"    id="product_code"	name="证券代码"/>	
		<item type="text"    id="product_name"	name="证券名称"/>
		<item type="select"  id="business_type"	name="业务类别" source="500" nullable="false"/>
		<item type="text"    id="rz_rate"	    name="融资比例(%)" default="0.01"/>
		<item type="text"    id="rq_rate"	    name="融券比例(%)" default="0.01"/>
		<item type="date"    id="begin_date"    name="起始日期" />
		<item type="date"    id="end_date"	    name="结束日期" />
	</input>
    <service type="procedure" id="p_company_info_monitor"  process="911" style="77">
		<param id="user_id"	      type="integer" way="in"/>
		<param id="market_code"   type="string"  way="in"/> 
		<param id="product_code"  type="string"  way="in"/>
		<param id="product_name"  type="string"  way="in"/>
		<param id="business_type" type="string"  way="in"/>
		<param id="rz_rate"		  type="double"  way="in"/>
		<param id="rq_rate"		  type="double"  way="in"/>
		<param id="begin_date"    type="string"  way="in"/>
		<param id="end_date"      type="string"  way="in"/>
    </service>
    <output export="true">
		<column type="string" id="product_code"	name="证券代码"/>
		<column type="string" id="product_name"	name="证券名称"/>
		<column type="string" id="date"	        name="日期"/>
		<column type="number" id="all_stock_num"	name="总股本数量"  precision="0"/>
		<column type="number" id="fin_stock_num"	name="融资总量"    precision="0"/>
		<column type="number" id="fin_stock_rate"	name="融资比例(%)" precision="8"/>
		<column type="number" id="bs_stock_num"	    name="融券余量"    precision="0"/>
		<column type="number" id="bs_stoc_rate"	    name="融券比例(%)" precision="8"/>
		<column type="number" id="bs_stock_value"	name="证券市值(元)"	    precision="2"/>
		<column type="string" id="warning_level"	name="报警级别"	    level="true"	display="false"/>
    </output>
</function>
<?xml version="1.0" encoding="gbk" ?>
<function id="3020201" name="客户证券查询" >
	<input export="true">	
		<item type="hidden"  id="select_method_id"	    name="查询方式" source="515" nullable="false"/>		
		<item type="select"  id="institution_id"	    name="营业部名称" source="95000008"/>
		<item type="hidden"  id="cust_id"	            name="客户id"/>		
		<item type="text"    id="cust_code"	            name="客户代码"/>
		<item type="hidden"  id="acc_id"	            name="账户id"/>
		<item type="text"    id="acc_code"	            name="证券账户"/>			
		<item type="text"    id="product_code"          name="证券代码"/>
		<group name="分页查询" page="true">			
			<item type="text"    id="page_num"       name="页码"     integer="true" default="1"/>
			<item type="select"  id="rows_num"       name="每页行数" integer="true" source="95000012" nullable="false"/>
		</group>
	</input>
    <service type="procedure" id="p_cust_acc_sec_query"  implement="p_cust_acc_sec_query3020201"  process="911" style="77">
		<param id="user_id"	            type="integer" way="in"/> 
		<param id="page_num"	        type="integer"  way="in"/> 			
 		<param id="rows_num"	        type="integer"  way="in"/>
		<param id="select_method_id"	type="integer" way="in"/> 
		<param id="institution_id"	    type="integer" way="in"/> 
		<param id="cust_id"	            type="integer" way="in"/> 
		<param id="cust_code"	        type="string"  way="in"/> 
		<param id="acc_id"				type="integer" way="in"/> 
		<param id="acc_code"	        type="string"  way="in"/> 	
		<param id="product_code"        type="string"  way="in"/>
    </service>
    <output export="true">
		<column type="string"  id="institution_name"	name="营业部名称" display="false"/>
		<column type="string"  id="cust_code"			name="客户代码" display="false"/>
		<column type="string"  id="cust_name"			name="客户名称" display="false"/>
		<column type="string"  id="market_code"			name="市场"/>
		<column type="string"  id="product_type"		name="证券类型"	display="false"/>
		<column type="string"  id="product_code"		name="证券代码"/>		
		<column type="string"  id="product_name"		name="证券名称"/>			
		<column type="number"  id="self_stock_qty"		name="证券数量"		precision="0" total="true"/>
		<column type="number"  id="asset_value"			name="证券市值"		precision="2" total="true"/>
		<column type="number"  id="stock_convert_rate"	name="证券折算率"	precision="4"/>
    </output>
</function>

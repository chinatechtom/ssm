<?xml version="1.0" encoding="gbk" ?>
<function id="36000063" name="6.3.2平仓客户资产盈亏状态明细表" >  
  <input>
  <item type="select" id="institution_id" name="营业部名称"  source="95000008"/>
  <item type="text"   id="cust_code"      name="客户代码"  /> 
 <item type="date"   id="date"           name="日期"  default="now"/>
  </input>
   <service type="procedure" id="P36000063" process="911" style="77">
 <param id="user_id" type="integer" way="in" /> 
 <param id="date"    type="string" way="in" />
 <param id="cust_code"      type="string" way="in" />
 <param id="institution_id" type="integer" way="in" />
  </service> 
  <output  print="true">
    <column type="string" id="pc_status"        name="平仓状态"/>
    <column type="string" id="institution_name" name="营业部"/> 
    <column type="string" id="cust_code"        name="客户代码"/>  
   <column type="string" id="cust_name"        name="客户名称"/>
   <column type="number" id="guarantee_rate"   name="担保率"          precision="4"/>
    <column type="number" id="guarantee_amt"    name="保证金可用余额"  precision="2" total="true"/>
   <group name="担保证券">  
   <column type="number" id="gua_stock_cost"   name="成本"  precision="2" total="true"/>
    <column type="number" id="gua_market_value" name="市值"  precision="2" total="true"/> 
   <column type="number" id="profit_loss"      name="浮动盈亏"  precision="2" total="true"/>
  </group> 
   <column type="number" id="fund_amt"         name="总资产"  precision="2" total="true"/>
   <column type="number" id="debt_amt"         name="总负债"  precision="2" total="true"/>
   <column type="number" id="break_contract_amt" name="违约金额" precision="2" total="true" display="false"/>
   <column type="string" id="remark"           name="备注"    />
  </output>
</function>
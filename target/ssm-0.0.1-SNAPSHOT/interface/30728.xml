<?xml version="1.0" encoding="gbk" ?>
<function id="30728" name="客户总资产负债查询" >
	<input>			
		<item type="hidden"  id="cust_id"	        name="客户id"/>
		<item type="hidden"  id="guarantee_rate_id_ctl"	    name="补仓线id"/>
	</input>
    <service type="procedure" id="p_cust_total_asset_debt_search"  process="911" style="77">
		<param id="user_id"	            type="integer" way="in"/> 
		<param id="cust_id"				type="integer" way="in"/>
		<param id="guarantee_rate_id_ctl"		type="integer" way="in" default="0"/>
    </service>
    <output export="true" autoload="true">
		<column type="number" id="cust_id"				name="客户id"			display="false"/>
		<column type="number" id="asset_amt"			name="客户总资产"		precision="3"/>
		<column type="number" id="fund_amt"				name="客户总资金"		precision="3"/>
		<column type="number" id="stock_amt"			name="证券市值"			precision="3"/>
		<column type="number" id="stock_convert_amt"	name="证券折算价值"		precision="3"/>
		<column type="number" id="guarantee_amt"		name="担保品总价值"		precision="3"/>
		<column type="number" id="non_guarantee"		name="非担保品总价值"	precision="3"/>	
		<column type="number" id="debt_amt"				name="客户总负债"		precision="3"/>
		<column type="number" id="financing_amt"		name="客户总融资"		precision="3"/>
		<column type="number" id="borrow_stock_amt"		name="客户总融券"		precision="3"/>
		<column type="number" id="credit_charge_amt"	name="客户总利息和费用"	precision="3"/>	
		<column type="number" id="asset_gap"			name="客户资产差额"		precision="3"/>	
		<column type="number" id="margin_remain"		name="保证金可用余额"	precision="3"/>	
		<column type="number" id="margin_used"			name="保证金已用余额"	precision="3"/>	
		<column type="number" id="margin_total"			name="保证金总额"		precision="3"/>	
		<column type="number" id="guarantee_rate"		name="维持担保比例"		precision="6"/>
		<column type="number" id="avai_fund"			name="可用资金"			precision="2"/>
    </output>	
</function>
<?xml version="1.0" encoding="gbk" ?>
<function id="36000084" name="8.3.1风险类客户情况汇总" >  
  <input>
  <item type="select" id="institution_id" name="营业部名称"  source="95000008"/>
<item type="date"   id="date"           name="日期"  default="now"/>
  </input>
   <service type="procedure" id="P36000084" process="911" style="77">
<param id="user_id" type="integer" way="in" /> 
<param id="institution_id" type="integer" way="in" />
<param id="date"    type="string" way="in" />
  </service> 
  <output  print="true">
    <column type="number" id="id"                name="序号"/>
    <column type="string" id="institution_name"  name="营业部"/> 
    <group name="风险客户数"> 
    <column type="number" id="warning_num"       name="警戒"   total="true"  />
    <column type="number" id="pc_num"            name="平仓"   total="true"  />
    <column type="number" id="bad_account_num"   name="坏账"   total="true"  />
    <column type="number" id="over_day_num"      name="逾期"   total="true"  /> 
    </group>
    <group name="警戒客户"> 
  <column type="number" id="warning_fund_amt"  name="资产总额"  precision="2" total="true"/>
    <column type="number" id="warning_debt_amt"      name="负债总额"  precision="2" total="true"/>
    <column type="number" id="warning_violation_amt" name="违约额度"  precision="2" total="true"/>
    </group>
    <group name="平仓客户"> 
    <column type="number" id="pc_fund_amt"          name="资产总额" precision="2"  total="true"/>
    <column type="number" id="pc_debt_amt"          name="负债总额" precision="2" total="true"/>
    <column type="number" id="pc_violation_amt"     name="违约额度" precision="2" total="true"/>
    </group>
    <group name="坏账客户"> 
    <column type="number" id="bad_account_fund_amt" name="资产总额" precision="2" total="true"/>
    <column type="number" id="bad_account_debt_amt" name="负债总额" precision="2" total="true"/>
    <column type="number" id="bad_account_violation_amt"  name="违约额度" precision="2" total="true"/>
    </group>
    <group name="逾期客户"> 
    <column type="number" id="over_day_fund_amt"          name="资产总额" precision="2" total="true"/>
    <column type="number" id="over_day_debt_amt"          name="负债总额" precision="2" total="true"/>
    <column type="number" id="over_day_violation_amt"     name="违约额度" precision="2" total="true"/>
    </group>
  </output>
</function>